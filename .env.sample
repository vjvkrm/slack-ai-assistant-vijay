# Slack App Configuration (Required)
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token

# LLM Configuration
# default for local testing  => : http://localhost:3001/slack/llm
LLM_API_URL=your-llm-api-endpoint

# Database Configuration (Optional)
# Required only if user identification is enabled
DATABASE_URL=your-database-url

# Feature Flags
# Enable/disable user identification (Default: false)
ENABLE_USER_IDENTIFICATION=false
